<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= category %></title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <h1><%= category %> Menu</h1>

    <ul>
      <% menuItems.forEach(item => { %>
      <li>
        <b><%= item.name %>:</b> Price: <%= item.price %>, Rating: <%=
        item.rating === 5 ? '⭐️' : item.rating %>, Details: <%= item.details %>
      </li>
      <% }); %>
    </ul>
  </body>
</html>
