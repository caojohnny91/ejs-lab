<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Menu</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

            <h1>Full Menu</h1>
    <ul>
        <% menu.forEach((item, index) => { %>
            <li>
                <b><%= item.name %>:</b> Price: <%= item.price %>, Rating: <%= item.rating === 5 ? '⭐️' : item.rating %>, Details: <%=
                item.details %>
            </li>
            <% }); %>
          </ul>

    <h2>Mains</h2>
    <ul>
    <% menu.forEach((item, index) => { %>
       <% if (item.category === 'mains') { %>
        <li>
            <b><%= item.name %>:</b> Price: <%= item.price %>, Rating: <%= item.rating === 5 ? '⭐️' : item.rating %>, Details: <%=
            item.details %>
        </li>
       <% }; %>
    <% }); %>   
</ul>

    <h2>Sides</h2>
    <ul>
        <% menu.forEach((item, index) => { %>
           <% if (item.category === 'sides') { %>
