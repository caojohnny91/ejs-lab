        <% menu.forEach((item, index) => { %>
           <% if (item.category === 'desserts') { %>
            <li>
                <b><%= item.name %>:</b> Price: <%= item.price %>, Rating: <%= item.rating === 5 ? '⭐️' : item.rating %>, Details: <%=
                item.details %>
            </li>
               <% }; %>
        <% }); %>   
    </ul>


      
    
  </body>
</html>
